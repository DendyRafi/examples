type Options = record {
  add_logo : bool;
  add_gradient : bool;
  add_transparency : opt bool;
};

type QrError = record {
  message : text;
};

type QrResult = variant {
  Image : blob;
  Err : QrError;
};

service : {
  "qrcode_query" : (input : text, options : Options) -> (QrResult);
  "qrcode" : (input : text, options : Options) -> (QrResult);
  "qrresult_len" : () -> (nat64);
  "qrcode_query_single" : (input : text, options : Options) -> (QrResult);
};
